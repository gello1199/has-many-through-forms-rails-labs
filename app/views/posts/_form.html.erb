<h1>New Post</h1>

<%= form_for @post do |p| %>
<%= p.label "Title" %>
<%= p.text_field :title %><br><br>

<%= p.label "Content" %>
<%= p.text_area :content %><br><br>

<%= p.collection_check_boxes :category_ids, Category.all, :id, :name %>

<%= p.fields_for :categories, post.categories.build do |c| %>
<%= c.label :name, "Category" %>
<%= c.text_field :name %>
<% end %>

<%= p.submit %>

<% end %>
